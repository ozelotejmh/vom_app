# Podfile generado manualmente
platform :ios, '13.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# âœ… Esta es la forma correcta de instalar los plugins Flutter
install! 'cocoapods', :deterministic_uuids => false

def flutter_install_all_ios_pods(flutter_application_path)
  File.foreach(File.join(flutter_application_path, '.flutter-plugins')) do |line|
    plugin = line.split('=').first.strip
    plugin_path = line.split('=').last.strip
    pod plugin, :path => File.join(plugin_path, 'ios')
  end
end

target 'Runner' do
  flutter_application_path = File.expand_path('..', __dir__)
  flutter_install_all_ios_pods(flutter_application_path)
end
